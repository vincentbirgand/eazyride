
  <h1>Nouveau Ride à toi de jouer !</h1>



<div class="page-container">
  <div class="container" style="width: 700px; margin: 0 auto;">
    <%= simple_form_for [@journey] do |f| %>
      <%= f.input :description %>
      <%= f.input :activity %>
      <%= f.input :source_city %>
      <%= f.input :destination_city %>
      <%= f.input :price %>
      <%= f.input :shares_gear %>
      <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Créer ton ride", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
