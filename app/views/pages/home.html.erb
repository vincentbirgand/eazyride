<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="https://res.cloudinary.com/dscu7dmwa/video/upload/v1544105174/banner_eazyride.mp4" type="video/mp4">
  </video>
  <div class="container h-100">
    <div class="d-flex text-center h-100">
      <div class="my-auto w-100 text-white">
        <h1 class="display-3">EAZYRIDE</h1>
        <h3>Le covoiturage sportif</h3>
      </div>
    </div>
    <br />
    <form class="form-inline">
       <div id="journeys">
        <%= simple_form_for Journey.new, url: journeys_path, method: :get do |f| %>
        <%= f.input :activity_id, collection: Activity.all, prompt: "Choisis ton activité ", label: false %>
        <%= f.input :source_city, placeholder: "Ville de départ", label: false %>
        <%= f.input :destination_city, placeholder: "Ville d'arrivée", label: false %>
        <div class="form-group string optional search_starts_time">
              <!-- <label class="form-control-label string optional" for="search_starts_time" >Starts time</label> -->
              <input class="form-control string optional datepicker flatpickr-input" type="text" name="journey[start_time]" id="search_starts_time" readonly="readonly" placeholder="Date">
        </div>

            <%= f.button :submit, "C'est parti", class: "btn btn-success" %>
      <% end %>
      </div>
     </form>
     </div>
    </div>
   </div>
  </div>
</header>

