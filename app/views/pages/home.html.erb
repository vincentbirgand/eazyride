<h1>Pages#home</h1>
<p>Voici les derniers rides ajoutés!</p>
  <% @journeys.each do |journey| %>
  <p><%= journey.description %></p>
<% end %>
<!-- Faire un sample des derniers rides ajoutés
 -->



<div class="home-wrapper", style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('banner.jpg') %>);">
  <h1>Rechercher un trajet <br >ENTRE PARTICULIERS</h1>
  <br >



<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div id="journeys">

          <%= simple_form_for Journey.new, url: journeys_path, method: :get do |f| %>
            <%= f.input :activity_id, collection: Activity.all %>
            <%= f.input :source_city %>
            <%= f.submit %>
          <% end %>

      </div>
    </div>
  </div>
</div>


<%= link_to "Rechercher", journeys_path, class: "btn btn-primary" %>
<!-- Bouton recherche doit amener au résultat de la recherche
 -->

